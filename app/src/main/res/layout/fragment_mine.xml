<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shenni.lives.fragment.HomeFragment">


    <ImageView
        android:id="@+id/iv_bagpic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p530"
        android:layout_marginTop="-100px"
        android:background="@drawable/icon_me_bg"
        android:scaleType="centerCrop" />

    <com.shenni.lives.widget.PersonalScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/p430"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_mine_head"
                    android:layout_width="@dimen/p160"
                    android:layout_height="@dimen/p160"
                    android:layout_marginTop="@dimen/p70"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tv_mine_name"
                    style="@style/font_white18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/p30"
                    android:text="安和娇" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/p10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_focus_num"
                            style="@style/font_white18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            style="@style/font_white18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="关注 " />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/p2"
                        android:layout_height="@dimen/p60"
                        android:background="@color/live_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_my_golds"
                            style="@style/font_white18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0" />

                        <TextView
                            android:id="@+id/tv_mine_gold"
                            style="@style/font_white18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/live_gold" />


                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/p2"
                        android:layout_height="@dimen/p60"
                        android:background="@color/live_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_mine_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_dredge4" />

                        <TextView
                            style="@style/font_white18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="会员" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!--//下部布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p13"
                android:background="@color/white"
                android:orientation="vertical">

                <!--//我的账户-->
                <RelativeLayout
                    android:id="@+id/rl_mine_acc"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p100">

                    <ImageView
                        android:id="@+id/tv_mine1"
                        android:layout_width="@dimen/p50"
                        android:layout_height="@dimen/p50"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/p30"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_wode" />

                    <TextView
                        style="@style/font_grey12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_mine1"
                        android:gravity="center_vertical"
                        android:text="我的账户" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_back_right2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1.5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/p120"
                        android:background="@color/live_bg" />
                </RelativeLayout>
                <!--//我的动态-->
                <RelativeLayout
                    android:id="@+id/rl_mine_dyn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p100">

                    <ImageView
                        android:id="@+id/tv_mine2"
                        android:layout_width="@dimen/p50"
                        android:layout_height="@dimen/p50"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/p30"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_dongtai" />

                    <TextView
                        style="@style/font_grey12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_mine2"
                        android:gravity="center_vertical"
                        android:text="我的动态" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_back_right2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1.5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/p120"
                        android:background="@color/live_bg" />
                </RelativeLayout>
                <!--//主播收益-->
                <RelativeLayout
                    android:id="@+id/rl_mine_earnings"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p100">

                    <ImageView
                        android:id="@+id/tv_mine3"
                        android:layout_width="@dimen/p50"
                        android:layout_height="@dimen/p50"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/p30"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_shouyi" />

                    <TextView
                        style="@style/font_grey12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_mine3"
                        android:gravity="center_vertical"
                        android:text="主播收益" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_back_right2" />

                </RelativeLayout>


            </LinearLayout>
            <!--//下部布局2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/p13"
                android:background="@color/white"
                android:orientation="vertical">

                <!--//联系客服-->
                <RelativeLayout
                    android:id="@+id/rl_mine_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p100">

                    <ImageView
                        android:id="@+id/tv_mine4"
                        android:layout_width="@dimen/p50"
                        android:layout_height="@dimen/p50"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/p30"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_kefu" />

                    <TextView
                        style="@style/font_grey12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_mine4"
                        android:gravity="center_vertical"
                        android:text="联系客服" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_back_right2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/p1.5"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/p120"
                        android:background="@color/live_bg" />
                </RelativeLayout>
                <!--//分享软件-->
                <RelativeLayout
                    android:id="@+id/rl_mine_share"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/p100"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/tv_mine5"
                        android:layout_width="@dimen/p50"
                        android:layout_height="@dimen/p50"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/p30"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_share" />

                    <TextView
                        style="@style/font_grey12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@+id/tv_mine5"
                        android:gravity="center_vertical"
                        android:text="分享软件" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/p40"
                        android:background="@drawable/icon_back_right2" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>

    </com.shenni.lives.widget.PersonalScrollView>


</FrameLayout>
