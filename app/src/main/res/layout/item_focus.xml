<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/p4"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/p460">

        <ImageView
            android:id="@+id/iv_item_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p460"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/p20"
            android:layout_marginTop="@dimen/p30"
            android:background="@drawable/icon_add" />

        <TextView
            android:id="@+id/tv_item_hot_add"
            style="@style/font_white12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_add"
            android:layout_marginLeft="@dimen/p4"
            android:layout_toRightOf="@+id/iv_add"
            tools:text="杭州市" />

        <ImageView
            android:id="@+id/iv_live_type"
            android:layout_width="@dimen/p86"
            android:layout_height="@dimen/p86"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/p10"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_peolpe"
            style="@style/font_white12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/p30"
            android:layout_marginLeft="@dimen/p20"
            android:drawableLeft="@drawable/icon_people_white"
            android:drawablePadding="@dimen/p7"
            />

        <TextView
            android:id="@+id/tv_item_hot_audience"
            style="@style/font_white12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_peolpe"
            android:layout_toRightOf="@+id/tv_peolpe"
            tools:text="132132" />
    </RelativeLayout>
</LinearLayout>