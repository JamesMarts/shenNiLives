<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_share"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/p4"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_share_socia"
        android:layout_width="@dimen/p110"
        android:layout_height="@dimen/p110"
        android:src="@drawable/icon_share_qq" />

    <TextView
        android:id="@+id/tv_follow_name"
        style="@style/font_dark16"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/p10"
        android:layout_height="wrap_content"
        tools:text="QQ" />


</LinearLayout>